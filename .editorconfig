# .editorconfig
# Stop the editor from looking for .editorconfig files
# in the parent directories editorconfig.org
# https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties
root = true

# Default settings for all files
# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# HTML files
[*.html]
indent_style = space
indent_size = 2
max_line_length = 100

# CSS and SCSS files
[*.css, *.scss]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

[*.md]
indent_size = false
trim_trailing_whitespace = false

# JavaScript files
[*.js]
indent_style = space
indent_size = 2
max_line_length = 100
